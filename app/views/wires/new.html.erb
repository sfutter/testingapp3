<h1>New Wire</h1>

<%= form_for :wire, url: wires_path do |f| %>
  <% if @wire.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@wire.errors.count, "error") %> prohibited this post from being saved:</h2>
    <ul>
    <% @wire.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  <div class="center">
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :category %><br>
    <%= f.select :category, options_for_select(%w[Funny Pics ]) %>
  </p>
 
  <p>
    <%= f.label :frequency %><br>
    <%= f.text_field :frequency %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>
 
<%= link_to 'Back', wires_path %> 